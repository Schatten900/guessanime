SELECT * FROM PERFIL;
SELECT * FROM ANIME;
SELECT * FROM EPISODE;
SELECT * FROM ANIME_CHARACTER;
SELECT * FROM PONTUATION;

DROP TABLE PONTUATION;
DROP TABLE PERFIL;
DROP TABLE EPISODE;
DROP TABLE ANIME_CHARACTER;
DROP TABLE ANIME;

CREATE TABLE PERFIL (
ID_USER INT AUTO_INCREMENT PRIMARY KEY,
UERNAME VARCHAR(16) NOT NULL,
EMAIL VARCHAR(48) UNIQUE NOT NULL,
PASSWORD VARCHAR(11) NOT NULL,
IMAGE MEDIUMBLOB
);

CREATE TABLE ANIME(
ID_ANIME INT AUTO_INCREMENT PRIMARY KEY,
TITLE VARCHAR(55) NOT NULL,
SYNOPSIS TEXT
);

CREATE TABLE EPISODE(
ID_EPISODE INT AUTO_INCREMENT PRIMARY KEY,
ID_ANIME INT NOT NULL,
TITLE VARCHAR(64) NOT NULL,
SYNOPSIS TEXT,
FOREIGN KEY (ID_ANIME) REFERENCES ANIME (ID_ANIME)
);

CREATE TABLE ANIME_CHARACTER (
ID_CHAR INT AUTO_INCREMENT PRIMARY KEY,
ID_ANIME INT NOT NULL,
NAME_CHAR VARCHAR(64) NOT NULL,
IMAGE VARCHAR(255),
FOREIGN KEY (ID_ANIME) REFERENCES ANIME (ID_ANIME)
);

CREATE TABLE PONTUATION(
ID_USER INT NOT NULL,
POINTS INT NOT NULL,
FOREIGN KEY (ID_USER) REFERENCES PERFIL(ID_USER)
);

